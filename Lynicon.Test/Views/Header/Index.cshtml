@model Lynicon.Test.Models.HeaderContent

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>@Model.Title</h1>
    @Html.DisplayFor(m => m.Image)
    <div>
        @Html.Raw(Model.HeaderBody)
    </div>
    @foreach (var child in Model.ChildItems) {
        <a href="@child.Url">@child.Title</a>
    }
</body>
</html>
