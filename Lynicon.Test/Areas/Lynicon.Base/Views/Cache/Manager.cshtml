@model Lynicon.Extensibility.CacheAdminViewModel
@using Lynicon.Utility

<div class="module-section">
    @Model.ItemCount() items cached
    @if (Model.MemoryBytes.HasValue)
    {
        <text>, @Model.MemoryBytes.Value bytes</text>
    }
</div>
<div class="module-section">
    <div class="module-button" data-url="@Model.ReloadUrl">
        Reload
    </div>
    @if (!string.IsNullOrEmpty(Model.WriteToFileUrl))
    {
        <div class="module-button" data-url="@Model.WriteToFileUrl">
            Write To File
        </div>
    }
</div>
