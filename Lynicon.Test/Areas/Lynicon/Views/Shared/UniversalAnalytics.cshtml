@model string
<script type="text/javascript">
  
(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

ga('create', '@Model', 'auto');
ga('send', 'pageview');

$(document).ready(function () {
    $('body').on('click', 'a', function (ev) {
        var $trackContext = $(this).closest('link-track');
        if ($trackContext.length && $trackContext.data('link-track')) {
            var link = $(this).attr('href') || 'no link';
            var linkType = link.substr(0, 4) == 'http' && link.indexOf(window.location.hostname) == -1 ? 'External Link' : 'Internal Link';
            ga('send', linkType, $trackContext.data('link-track'), link);
        }
    })
})

</script>
