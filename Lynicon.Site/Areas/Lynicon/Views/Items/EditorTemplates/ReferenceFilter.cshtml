@model Lynicon.Extensions.ReferenceFilter
@using Lynicon.Utility
@Html.RegisterLocalStyles("ReferenceFilter", @"
    .reference-filter .lyn-server-select { width: 65%; display: inline-block; }
")
<div class="field-filter reference-filter">
    <label class="filter-name">@Model.Name</label>
    @if (Model.Showable)
    {
        <label>Show</label>
        @Html.CheckBoxFor(m => m.Show)
    }
    @Html.EditorFor(m => m.RefValue, "ReferenceServer")

    @Html.HiddenFor(m => m.ModelType)
    @Html.HiddenFor(m => m.Idx)
</div>
